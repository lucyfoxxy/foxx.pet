---
import { ASSETS } from '@Layout/SiteAssets/Images.astro';

type NavLink = {
  href: string;
  label: string;
  includeInHeader?: boolean;
};

type Props = {
  navLinks: NavLink[];
  meta?: { title?: string; description?: string; url?: string };
};

const { navLinks = [] } = (Astro.props ?? {}) as Props;
---

<header id="site-header" class={`site-header ${Astro.request.url.pathname === '/' ? 'is-home' : 'is-compact'}`}>
  <a class="site-header__brand" aria-label="Home" href="/">
   <img class="site-header__logo site-header__logo--compact" src={ASSETS.logo_header.src} alt="foxx.pet" />
   <img class="site-header__logo site-header__logo--hero" src={ASSETS.logo_hero.src} alt="foxx.pet" />
  </a>
  <nav class="site-header__nav">
    {navLinks
      .filter((link) => link.includeInHeader)
      .map((link) => (
        <span class="ui-chip"><a href={link.href}>{link.label}</a></span>
      ))
    }
  </nav>
 {Astro.request.url.pathname === '/' && <div id="hero-sentinel" aria-hidden="true"></div>}  
</header>

