---
import { siteContent } from '@Content/site';

const { meta, intro, contacts, disclaimer } = siteContent.pages.imprint;
---

<section class="content-head content-card__title section">
  <h1>{meta.title}</h1>
  <div class="prose">
    {intro.map((paragraph) => (
      <p>{paragraph}</p>
    ))}
  </div>
</section>

<section class="content-layout content-layout__split section">
  {contacts.map((contact) => (
    <section class="content-card">
      <div class="content-card__title">
        <h2>{contact.title}</h2>
        {contact.subtitle && <p><em>{contact.subtitle}</em></p>}
      </div>
      <dl class="deflist">
        {contact.details.map((detail) => (
          <>
            <dt class="deflist__term">{detail.term}</dt>
            <dd class="deflist__desc">
              {detail.type === 'email' ? (
                <a href={`mailto:${detail.value}`}>{detail.value}</a>
              ) : (
                detail.value
              )}
            </dd>
          </>
        ))}
      </dl>
    </section>
  ))}
</section>

<section class="content-card section">
  <div class="content-card__subtitle">
  <h2>Disclaimer</h2>
  <div class="prose">
    <p>
      <em>{disclaimer}</em>
    </p>
  </div>
  </div>
</section>
