---
import Layout from '@Design/Layout.astro';
import Icon from '@Design/Icons.astro';
import { ASSETS } from '@Design/Assets.astro';
import { sitePages } from '@Content/sitePages';

export const prerender = true;

const homeContent = sitePages.home;
const meta = homeContent.meta;

const heroAsset = ASSETS[homeContent.hero.assetKey as keyof typeof ASSETS];
const hero = {
  image: heroAsset?.src ?? ASSETS.logo_hero.src,
  heading: homeContent.hero.heading,
  subheading: homeContent.hero.subheading,
};

const intro = homeContent.intro;
const feature = homeContent.feature;
const links = homeContent.contactLinks;

const isExternalLink = (href: string) => href.startsWith('http');
---
<Layout meta={meta}>
  <head>
    <link rel="preload" href={hero.image} as="image" type="image/webp" />
  </head>

  <section class="media-hero section">
    
    <div class="media-hero__logo">

      <img src={hero.image} alt={hero.heading} loading="lazy" />
 
      
    </div>
       
  </section>

  <section class="content-layout content-layout__split section">
    <section class="content-card">
      <h2>{intro.heading}</h2>
      <div class="prose">
        {intro.paragraphs.map((paragraph) => <p>{paragraph}</p>)}
      </div>
      <h3><i>{intro.signature}</i></h3>
    </section>

    <section class="content-card">
      <h2>{feature.heading}</h2>
      <p>{feature.description}</p>
      <div class="feature-slot">
        <p>
          Replace this block with your own gallery, story teaser, or any custom
          component. You can also import existing components and render them here.
        </p>
      </div>
    </section>
  </section>

  <section class="content-card section">
    <h2>Get in Touch</h2>
    <div class="ui-btn__contact--wrap">
      {links.map((link) => (
        <a
          class={`ui-btn__contact ui-btn__contact--${link.kind}`}
          href={link.href}
          rel={isExternalLink(link.href) ? 'noopener noreferrer' : undefined}
          target={isExternalLink(link.href) ? '_blank' : undefined}
        >
          <span class="ui-btn__contact--icon"><Icon kind={link.kind} /></span>
          <span>{link.label}</span>
        </a>
      ))}
    </div>
  </section>
</Layout>
