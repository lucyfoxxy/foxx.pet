---
import Layout from '@Design/Layout.astro';
import Icon from '@Design/Icons.astro';
import { ASSETS } from '@Design/Assets.astro';

export const prerender = true;

const meta = {
  title: 'Base Template - Your Project Name',
  description: 'Use this page as a starting point for a new Astro page.',
};

const hero = {
  logo: ASSETS.logo_hero.src,
  heading: 'Welcome to',
  subheading: 'Home of a small purple fox flying around!',
};

const intro = {
  heading: 'Welcome Title',
  paragraphs: [
    'Introduce yourself or your project with a warm welcome.',
    'Explain what visitors can expect to find on this page.',
    'Highlight a call to action such as linking to your gallery or services.',
  ],
  signature: 'Your Name',
};

const feature = {
  heading: 'Featured Section',
  description:
    'Use this area to showcase a highlight, image carousel, or any other element you want to bring attention to.',
};

const links = [
  { href: 'https://example.com', label: 'External Link', kind: 'link' },
  { href: 'mailto:you@example.com', label: 'Email', kind: 'mail' },
];

const isExternalLink = (href: string) => href.startsWith('http');
---
<Layout meta={meta}>
  <head>
    <link rel="preload" href={hero.image} as="image" type="image/webp" />
  </head>

  <section class="media-hero section">
    
    <div class="media-hero__logo">

      <img src={hero.logo} alt={hero.heading} loading="lazy" />   
 
      
    </div>
       
  </section>

  <section class="content-layout content-layout__split section">
    <section class="content-card">
      <h2>{intro.heading}</h2>
      <div class="prose">
        {intro.paragraphs.map((paragraph) => <p>{paragraph}</p>)}
      </div>
      <h3><i>{intro.signature}</i></h3>
    </section>

    <section class="content-card">
      <h2>{feature.heading}</h2>
      <p>{feature.description}</p>
      <div class="feature-slot">
        <p>
          Replace this block with your own gallery, pricing table, or any custom
          component. You can also import existing components and render them here.
        </p>
      </div>
    </section>
  </section>

  <section class="content-card section">
    <h2>Get in Touch</h2>
    <div class="ui-btn__contact--wrap">
      {links.map((link) => (
        <a
          class={`ui-btn__contact ui-btn__contact--${link.kind}`}
          href={link.href}
          rel={isExternalLink(link.href) ? 'noopener noreferrer' : undefined}
          target={isExternalLink(link.href) ? '_blank' : undefined}
        >
          <span class="ui-btn__contact--icon"><Icon kind={link.kind} /></span>
          <span>{link.label}</span>
        </a>
      ))}
    </div>
  </section>
</Layout>
