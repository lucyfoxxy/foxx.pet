---
import Layout from '@Design/Layout.astro';
import GalleryOverviewPage from '@Pages/Gallery/OverviewPage.astro';
import { sitePages } from '@Content/sitePages';
export const prerender = true;

const galleriesContent = sitePages.galleries;
const categories = galleriesContent.categories.map(({ slug, title }) => ({ slug, title }));
const title = galleriesContent.meta.title;
const description = galleriesContent.description;
---
<Layout {title} meta={{ description }}>
  <GalleryOverviewPage {categories} heading={galleriesContent.heading} description={galleriesContent.description} />
</Layout>